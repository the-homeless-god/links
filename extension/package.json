{
  "name": "links-manager-extension",
  "version": "1.0.0",
  "description": "Удобное управление короткими ссылками",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build -c vite.popup.config.ts && vite build -c vite.background.config.ts && vite build -c vite.content.config.ts && vite build -c vite.auth.config.ts && node scripts/build.js",
    "build:release": "rm -rf dist && npm run build",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check-types": "tsc --noEmit",
    "validate": "npm run lint && npm run check-types",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^5.1.4",
    "fs-extra": "^11.3.0",
    "@types/fs-extra": "^11.0.4"
  },
  "dependencies": {
    "fp-ts": "^2.16.9"
  }
}
