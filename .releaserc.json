{
  "branches": [
    "master",
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ],
  "preset": "conventionalcommits",
  "releaseRules": [
    {
      "type": "feat",
      "release": "minor"
    },
    {
      "type": "fix",
      "release": "patch"
    },
    {
      "type": "perf",
      "release": "patch"
    },
    {
      "type": "refactor",
      "release": "patch"
    },
    {
      "type": "docs",
      "release": false
    },
    {
      "type": "style",
      "release": false
    },
    {
      "type": "chore",
      "release": false
    },
    {
      "type": "test",
      "release": false
    },
    {
      "type": "ci",
      "release": false
    },
    {
      "type": "build",
      "release": false
    },
    {
      "breaking": true,
      "release": "major"
    }
  ]
}
